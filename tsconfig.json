{
  "compilerOptions": {
    "strict": false,
    
    "target": "ES2018",
    "module": "CommonJs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    
    "rootDir": "./",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}